<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_common_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Common Confirm Dialog"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_show_custom_progress_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show custom progress dialog"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_stop_custom_progress_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop custom progress dialog"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_single_instance_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Instance Dialog"
        android:textAllCaps="false" />
</androidx.appcompat.widget.LinearLayoutCompat>