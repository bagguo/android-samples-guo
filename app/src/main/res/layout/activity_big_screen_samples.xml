<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.largescreen.BigScreenSamplesActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_responsive_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Responsive Views"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_jetpack_window_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jetpack WindowManager"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_activity_embedding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Embedding"
        android:textAllCaps="false" />
</androidx.appcompat.widget.LinearLayoutCompat>