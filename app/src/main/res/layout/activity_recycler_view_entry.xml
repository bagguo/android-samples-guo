<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.UIEntryActivity">

    <Button
        android:id="@+id/ryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recycler_view" />

    <Button
        android:id="@+id/expandableRyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expandable_ry" />

    <Button
        android:id="@+id/headerFooterRyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="header Footer RecyclerView" />

    <Button
        android:id="@+id/nestedRvBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nested RecyclerView" />
</androidx.appcompat.widget.LinearLayoutCompat>